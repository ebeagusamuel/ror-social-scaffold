<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <%= show_friendship_status(@user) %>

  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>

<% if @user == current_user %>
  <h2>Invitations</h2>
  <% pending_invitations.each do |sender| %>
    <div class="invitation">
      <p class="flex-item"><%= sender.name %> wants to be your friend</p>
      <%= link_to 'accept', user_accept_path(sender), method: :post, class: 'invite-btn' %>
      <%= link_to 'reject', user_reject_path(sender), method: :post, class: 'invite-btn' %>
    </div>
  <% end %>
<% end %>
